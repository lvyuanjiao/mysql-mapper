{#insert post}
	INSERT INTO post(id, title, content, created)
	VALUES(#post.id, #post.title, #post.content, #post.created)
{/#insert}

{#update post}
	UPDATE post
	{@set}
		{@each value="#post"}
			{@if test="#item"}
				$key = #item,
			{/@if}
		{/@each}
	{/@set}
	{@where}
		{@if test="#post.id"}
			AND id = #post.id
		{/@if}
	{/@where}
{/#update}

{#selectById id}

	SELECT * FROM post 
	{@where}
		{@if test="#id"}
			AND id = #id
		{/@if}
	{/@where}

{/#selectById}


{#deleteById id}
	DELETE FROM post WHERE id = #id
{/#deleteById}

