
{#insert post}
	INSERT INTO post (title, content, author, post_at)
	VALUES (#post.title, #post.content, #post.author, #post.post_at)
{/insert}


{#update post}
	UPDATE post SET 
		title = #post.title,
		content = #post.content,
		updated = #post.updated
	WHERE
		id = #post.id
{/update}

{#selectById id}
	SELECT * FROM post WHERE id = #id
{/selectById}


{#selectAll}
	SELECT * FROM post
{/selectAll}


{#deleteById postId}
	DELETE FROM post WHERE id = #postId
{/deleteById}

{#deleteAll postId}
	DELETE FROM post
{/deleteAll}

{#errorQuery}
	SELECT this_column_is_not_exist FROM post
{/errorQuery}